{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node",
  "extends": "./base.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist",
    "target": "ES2021",
    "types": ["node"],
    "noEmit": false
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
